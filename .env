# 🔐 Discord Bot Configuration
TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_application_client_id_here

# 🌍 MongoDB (using MongoDB Atlas)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/modbot?retryWrites=true&w=majority

# ⚙️ Bot Settings
PREFIX=!
OWNER_ID=1262304052361035857 # replace with your ID if different
STATUS_MESSAGE=🛡️ Moderating the server with style!

# 🧠 Groq API (if you want to scan chat content)
GROQ_API_KEY=your_groq_api_key_here

# 📢 Webhook Log (optional – used if you enable webhook logging)
LOG_WEBHOOK=https://discord.com/api/webhooks/xxxxxxxxxx/yyyyyyyyyyyyyyyyyyyyyyyyyyyy

# 🕓 Auto unmute time (ms) — e.g. 60000 = 1 minute
AUTO_UNMUTE_INTERVAL=60000